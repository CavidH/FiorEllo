 @model IEnumerable<Product>  
@{
    int count = 1;
}
<!-- ============================================================== -->
<!-- Start Page Content here -->
<!-- ============================================================== -->

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body table-responsive">
                            <h4 class="m-t-0 header-title mb-4"><b>Category Table</b></h4>
                            @* <a class="btn btn-info waves-effect width-md waves-light " asp-action="Create" style="color:#ffffff  ">Add</a> *@
                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                                <thead>
                                    <tr>
                                        <th>№</th>
                                        <th>Name</th>
                                        <th>Image</th>
                                        <th>Count</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Setting</th>
                                        
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td>@count</td>
                                            <td>@product.Name</td>
                                            <td><img src="~/Assets/img/@product.Image.Where(image=>image.IsMain==true).FirstOrDefault().Image" width="50" class="img-fluid" alt=""></td>
                                            <td>@product.Count</td>
                                            <td>@product.Category.Name</td>
                                            <td>@product.Price</td>
                                            <td>
                                                <a  class="btn btn-icon waves-effect waves-light btn-primary"  asp-action="Detail"  asp-route-id="@product.Id" ><i class="mdi mdi-eye-outline"></i></a>
                                                <a class="btn btn-icon waves-effect waves-light btn-purple"     asp-action="Update" asp-route-id="@product.Id"><i class="mdi mdi-pencil-outline"></i></a> 
                                                <a  class="btn btn-icon waves-effect waves-light btn-danger"    asp-action="Delete" asp-route-id="@product.Id"><i class="mdi mdi-delete-outline"></i></a>
                                            </td>

                                        </tr>
                                        
                                        
                                            count++;
                                        
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- end container-fluid -->

    </div>
    <!-- end content -->
    <!-- Footer Start -->
    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    2015 - 2020 &copy; Velonic theme by <a href="#">Coderthemes</a>
                </div>
            </div>
        </div>
    </footer>
    <!-- end Footer -->

</div>

<!-- ============================================================== -->
<!-- End Page content -->
<!-- ============================================================== -->